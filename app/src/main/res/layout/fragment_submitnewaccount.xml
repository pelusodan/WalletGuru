<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddAccountFragment">

    <TextView
        android:id="@+id/submit_new_account_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Account Type: "
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/enter_new_account_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/enter_new_account_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/submit_new_account_name_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/submit_new_account_name_label"
        app:layout_constraintTop_toTopOf="@id/submit_new_account_name_label" />

    <TextView
        android:id="@+id/submit_new_account_balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:text="Account Balance: "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/submit_new_account_name_label"
        app:layout_constraintTop_toBottomOf="@id/submit_new_account_name_label" />

    <EditText
        android:id="@+id/enter_new_account_balance"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Enter"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@id/submit_new_account_balance_label"
        app:layout_constraintStart_toStartOf="@id/enter_new_account_name"
        app:layout_constraintTop_toTopOf="@id/submit_new_account_balance_label" />
</androidx.constraintlayout.widget.ConstraintLayout>